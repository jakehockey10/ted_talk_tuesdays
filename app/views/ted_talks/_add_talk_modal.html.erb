<div id="add-talk-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times</button>
        <h4 class="modal-title">Add a TED Talk to the wheel</h4>
      </div>
      <div class="modal-body">
        <%= form_for(TedTalk.new, class: 'form-horizontal') do |f| %>
            <br>
            <fieldset>
              <!--<legend>Add a TED Talk to the wheel</legend>-->
              <div class="form-group">
                <%= f.label :name, class: 'col-lg-2 col-md-2 col-sm-2 control-label', style: 'text-align: right; ' %>
                <div class="col-lg-10 col-md-10 col-sm-10">
                  <%= f.text_field :name, class: 'form-control' %>
                </div>
              </div>
              <div class="form-group">
                <%= f.label :url, class: 'col-lg-2 floating-label control-label', style: 'text-align: right' %>
                <div class="col-lg-10">
                  <%= f.text_field :url, class: 'form-control' %>
                </div>
              </div>
              <div class="modal-footer">
                <%= f.submit 'Add to wheel', class: 'btn btn-primary' %>
              </div>
            </fieldset>
        <% end %>
      </div>
    </div>
  </div>
</div>